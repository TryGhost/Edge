{{#get "posts" limit="all" filter="tags:[{{post.tags}}]+id:-{{post.id}}" as |related|}}
  {{#if related}}
    <section class="related-posts kg-width-full">
      <div class="container">
        <h3 class="related-title">{{t 'You Might Also Like...'}}</h3>
        <div class="post-feed">
          {{#foreach posts}}
            <div class="grid-item grid-sizer"></div>
            {{> "loop"}}
          {{/foreach}}
        </div>
      </div>
    </section>
  {{/if}}
{{/get}}